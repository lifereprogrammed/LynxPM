@model LynxPMCore.Models.Area

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Area</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AreaName" class="control-label"></label>
                <input asp-for="AreaName" class="form-control" />
                <span asp-validation-for="AreaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaDescription" class="control-label"></label>
                <input asp-for="AreaDescription" class="form-control" />
                <span asp-validation-for="AreaDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaKMLFileURL" class="control-label"></label>
                <input asp-for="AreaKMLFileURL" class="form-control" />
                <span asp-validation-for="AreaKMLFileURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AreaActive" /> @Html.DisplayNameFor(model => model.AreaActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AreaAppearanceOrder" class="control-label"></label>
                <input asp-for="AreaAppearanceOrder" class="form-control" />
                <span asp-validation-for="AreaAppearanceOrder" class="text-danger"></span>
            </div>
